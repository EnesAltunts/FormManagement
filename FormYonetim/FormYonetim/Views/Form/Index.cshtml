@using Entity
@model List<Forms>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<h2>Form Tablosu</h2>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Form Ekle
</button>
<label style="color:red">@TempData["register"]</label>
<div class="modal" id="Modal1">
    <div  class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Form Ekle</h2>
            </div>
            <form action="/AddForm" method="post">
                <div class="modal-body">
                    <label>FormName</label>
                    <input type="text" name="FormName" class="form-control"  required/>
                    <br />
                    <label>Description</label>
                    <input type="text" name="Description" class="form-control" required/>
                    <br />
                    <label>City</label>
                    <input type="text" name="City" class="form-control" />
                    <br />
                    <label>Age</label>
                    <input type="number" name="Age" class="form-control" />
                    <br />
                    <label>CreatedAt</label>
                    <input type="date" name="CreatedAt" class="form-control" />
                    <br />
                    <button type="submit" class="btn btn-info">Formu Kaydet</button>
                    <br />
                    
                </div>
            </form>
        </div>
    </div>
</div>


<div class="container">
    @using (Html.BeginForm())
            {
                <div class="form-group">
                    <div style="width:25%;float:right">
                        @Html.TextBox("ara", null, new {@class="form-control"})
                    </div>
                    <div style="float:right">
                        <input type="submit" name="btn" value="Ara" class="btn btn-info"/>
                    </div>
                </div>
            }
</div>

<form action="/Login/LogOut" >
    <div style="float:right">
        <input type="submit" name="btn" value="Çıkış Yap" class="btn btn-info" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">FormId</th>
            <th scope="col">CreatedBy</th>
            <th scope="col">FormName</th>
            <th scope="col">Description</th>
            <th scope="col">CreatedAt</th>
            <th scope="col">City</th>
            <th scope="col">Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Forms in Model)
        {
            <tr>
                <td>@Forms.FormId</td>
                <td>@Forms.createdBy</td>
                <td>@Forms.FormName</td>
                <td>@Forms.Description</td>
                <td>@Forms.CreatedAt</td>
                <td>@Forms.City</td>
                <td>@Forms.Age</td>
            </tr>
        }

    </tbody>
</table>


